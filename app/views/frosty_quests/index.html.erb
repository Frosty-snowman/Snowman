<% content_for :title, "Frosty quests" %>

<!-- Banner Images -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
  <%= image_tag("Frost.jpg", alt: "Frosty banner 1", class: "rounded-xl w-full shadow-lg") %>
  <%= image_tag("Frost2.jpg", alt: "Frosty banner 2", class: "rounded-xl w-full shadow-lg") %>
</div>

<!-- Header & Create Button -->
<div class="flex justify-between items-center mb-6">
  <h1 class="font-bold text-4xl text-white">All Quests</h1>
  <%= link_to "+ View Brags", brags_path, class: "bg-teal-500 hover:bg-teal-600 text-white font-semibold px-4 py-2 rounded-md shadow" %>
</div>

<!-- New Quest Input -->
<div class="flex items-center gap-2 mb-6">
  <input type="text" placeholder="New quest..." class="flex-1 px-4 py-2 rounded-md bg-gray-800 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-500" />
  <button class="bg-purple-600 hover:bg-purple-500 text-white px-4 py-2 rounded-md font-semibold">Add</button>
</div>

<!-- Quests List -->
<div class="space-y-4">
  <% if @frosty_quests.any? %>
    <% @frosty_quests.each do |frosty_quest| %>
      <div class="flex justify-between items-center bg-gray-800 p-4 rounded-md shadow">
        <div class="flex items-center gap-3">
          <%= check_box_tag "quest_#{frosty_quest.id}" %>
          <span class="text-white font-medium"><%= frosty_quest.title %></span>
        </div>
        <div class="flex gap-2">
          <%= link_to "👁️", frosty_quest, class: "bg-emerald-500 hover:bg-emerald-400 text-white px-3 py-1 rounded-md" %>
          <%= button_to "🗑️", frosty_quest, method: :delete, data: { turbo_confirm: "Are you sure?" },
                class: "bg-rose-500 hover:bg-rose-400 text-white px-3 py-1 rounded-md" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-gray-400 mt-10">No frosty quests found.</p>
  <% end %>
</div>
